    <script>
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      }, observerOptions);

      document.querySelectorAll(".fade-in").forEach((el) => {
        observer.observe(el);
      });

      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute("href"));
          if (target) {
            target.scrollIntoView({ behavior: "smooth", block: "start" });
          }
        });
      });
    </script>

    <style>
      :root {
        --fcc-orange: #fe5000;
        --fcc-blue: #003087;
        --fcc-dark-blue: #041e42;
        --fcc-light-gray: #bbbcbc;
        --fcc-white: #ffffff;
        --fcc-orange-glow: rgba(254, 80, 0, 0.3);
        --fcc-blue-glow: rgba(0, 48, 135, 0.3);
        --font-display: "Bebas Neue", sans-serif;
        --font-body: "Source Sans 3", sans-serif;
      }

      *,
      *:before,
      *:after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      :global(html) {
        scroll-behavior: smooth;
      }

      body {
        font-family: var(--font-body);
        background: var(--fcc-dark-blue);
        color: var(--fcc-white);
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* Navigation */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 100;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(180deg, #041e42f2, #041e4200);
      }

      .nav-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: var(--fcc-white);
      }

      .nav-logo svg {
        width: 48px;
        height: 48px;
      }

      .nav-logo-text {
        font-family: var(--font-display);
        font-size: 1.5rem;
        letter-spacing: 0.05em;
      }

      .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
      }

      .nav-links a {
        color: var(--fcc-white);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        transition: color 0.3s ease;
      }

      .nav-links a:hover {
        color: var(--fcc-orange);
      }

      /* Hero */
      .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(
          135deg,
          var(--fcc-dark-blue) 0%,
          var(--fcc-blue) 50%,
          var(--fcc-dark-blue) 100%
        );
      }

      .hero::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background:
          radial-gradient(
            circle at 30% 20%,
            var(--fcc-orange-glow) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 70% 80%,
            var(--fcc-blue-glow) 0%,
            transparent 40%
          );
        animation: heroGlow 15s ease-in-out infinite alternate;
      }

      @keyframes heroGlow {
        0% {
          transform: translate(0) rotate(0);
        }
        100% {
          transform: translate(-5%, 5%) rotate(5deg);
        }
      }

      .hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          -45deg,
          transparent,
          transparent 80px,
          rgba(254, 80, 0, 0.03) 80px,
          rgba(254, 80, 0, 0.03) 82px
        );
        pointer-events: none;
      }

      .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 2rem;
        max-width: 1200px;
      }

      .hero-badge {
        display: inline-block;
        background: var(--fcc-orange);
        color: var(--fcc-white);
        padding: 0.5rem 1.5rem;
        font-size: 0.875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        margin-bottom: 2rem;
        animation: slideDown 0.8s ease-out;
        clip-path: polygon(10px 0%, 100% 0%, calc(100% - 10px) 100%, 0% 100%);
      }

      @keyframes slideDown {
        0% {
          opacity: 0;
          transform: translateY(-30px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .hero-number {
        font-family: var(--font-display);
        font-size: clamp(8rem, 25vw, 20rem);
        line-height: 0.85;
        color: transparent;
        -webkit-text-stroke: 3px var(--fcc-orange);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.15;
        z-index: 0;
        animation: numberPulse 4s ease-in-out infinite;
      }

      @keyframes numberPulse {
        0%,
        100% {
          opacity: 0.15;
        }
        50% {
          opacity: 0.25;
        }
      }

      .hero-name {
        font-family: var(--font-display);
        font-size: clamp(4rem, 12vw, 10rem);
        line-height: 0.95;
        letter-spacing: 0.02em;
        margin-bottom: 1rem;
        position: relative;
        animation: fadeInUp 1s ease-out 0.2s both;
      }

      .hero-name span {
        display: block;
      }

      .hero-name .first-name {
        color: var(--fcc-white);
      }

      .hero-name .last-name {
        color: var(--fcc-orange);
        text-shadow: 0 0 60px var(--fcc-orange-glow);
      }

      @keyframes fadeInUp {
        0% {
          opacity: 0;
          transform: translateY(40px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .hero-position {
        font-size: 1.5rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3em;
        color: var(--fcc-light-gray);
        margin-bottom: 3rem;
        animation: fadeInUp 1s ease-out 0.4s both;
      }

      .hero-stats {
        display: flex;
        justify-content: center;
        gap: 4rem;
        flex-wrap: wrap;
        animation: fadeInUp 1s ease-out 0.6s both;
      }

      .hero-stat {
        text-align: center;
      }

      .hero-stat-value {
        font-family: var(--font-display);
        font-size: 3.5rem;
        color: var(--fcc-orange);
        line-height: 1;
      }

      .hero-stat-label {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--fcc-light-gray);
        margin-top: 0.5rem;
      }

      .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        animation: bounce 2s ease-in-out infinite;
      }

      .scroll-indicator svg {
        width: 32px;
        height: 32px;
        stroke: var(--fcc-orange);
      }

      @keyframes bounce {
        0%,
        100% {
          transform: translateX(-50%) translateY(0);
        }
        50% {
          transform: translateX(-50%) translateY(10px);
        }
      }

      /* Sections */
      section {
        padding: 6rem 2rem;
        position: relative;
      }

      .section-container {
        max-width: 1200px;
        margin: 0 auto;
      }

      .section-header {
        margin-bottom: 4rem;
      }

      .section-label {
        display: inline-block;
        background: var(--fcc-orange);
        color: var(--fcc-white);
        padding: 0.25rem 1rem;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        margin-bottom: 1rem;
        clip-path: polygon(5px 0%, 100% 0%, calc(100% - 5px) 100%, 0% 100%);
      }

      .section-title {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 6vw, 4rem);
        line-height: 1;
        color: var(--fcc-white);
      }

      /* Bio Section */
      .bio-section {
        background: linear-gradient(180deg, var(--fcc-dark-blue) 0%, var(--fcc-blue) 100%);
      }

      .bio-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
      }

      .bio-card {
        background: linear-gradient(135deg, #00308780, #041e42cc);
        border: 1px solid rgba(254, 80, 0, 0.3);
        padding: 3rem;
        position: relative;
        overflow: hidden;
      }

      .bio-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--fcc-orange);
      }

      .bio-card::after {
        content: "16";
        position: absolute;
        bottom: -20px;
        right: -10px;
        font-family: var(--font-display);
        font-size: 12rem;
        color: var(--fcc-orange);
        opacity: 0.05;
        line-height: 1;
      }

      .bio-detail {
        display: flex;
        justify-content: space-between;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .bio-detail:last-child {
        border-bottom: none;
      }

      .bio-detail-label {
        color: var(--fcc-light-gray);
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
      }

      .bio-detail-value {
        font-weight: 700;
        color: var(--fcc-white);
      }

      .bio-text {
        font-size: 1.125rem;
        line-height: 1.8;
        color: rgba(255, 255, 255, 0.9);
      }

      .bio-text p {
        margin-bottom: 1.5rem;
      }

      .bio-text p:last-child {
        margin-bottom: 0;
      }

      .highlight {
        color: var(--fcc-orange);
        font-weight: 700;
      }

      /* Stats Section */
      .stats-section {
        background: var(--fcc-blue);
        position: relative;
        overflow: hidden;
      }

      .stats-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23FE5000' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      }

      .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 2rem;
        position: relative;
        z-index: 1;
      }

      .stat-card {
        background: linear-gradient(135deg, #041e42e6, #00308780);
        border: 1px solid rgba(254, 80, 0, 0.2);
        padding: 2rem;
        text-align: center;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
      }

      .stat-card::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--fcc-orange);
        transform: scaleX(0);
        transition: transform 0.4s ease;
      }

      .stat-card:hover::before {
        transform: scaleX(1);
      }

      .stat-card:hover {
        transform: translateY(-5px);
        border-color: var(--fcc-orange);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      }

      .stat-value {
        font-family: var(--font-display);
        font-size: 4rem;
        color: var(--fcc-orange);
        line-height: 1;
        margin-bottom: 0.5rem;
      }

      .stat-label {
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--fcc-light-gray);
      }

      .stat-sublabel {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 0.25rem;
      }

      /* Style Section */
      .style-section {
        background: linear-gradient(180deg, var(--fcc-blue) 0%, var(--fcc-dark-blue) 100%);
      }

      .style-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
      }

      .style-card {
        background: rgba(0, 48, 135, 0.3);
        border: 1px solid rgba(254, 80, 0, 0.15);
        padding: 2.5rem;
        position: relative;
        transition: all 0.4s ease;
      }

      .style-card:hover {
        border-color: var(--fcc-orange);
        background: rgba(0, 48, 135, 0.5);
      }

      .style-icon {
        width: 64px;
        height: 64px;
        background: var(--fcc-orange);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        clip-path: polygon(15% 0%, 100% 0%, 100% 85%, 85% 100%, 0% 100%, 0% 15%);
      }

      .style-icon svg {
        width: 32px;
        height: 32px;
        stroke: var(--fcc-white);
        fill: none;
      }

      .style-title {
        font-family: var(--font-display);
        font-size: 1.75rem;
        color: var(--fcc-white);
        margin-bottom: 1rem;
      }

      .style-description {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.7;
      }

      /* Timeline Section */
      .timeline-section {
        background: var(--fcc-dark-blue);
        position: relative;
      }

      .timeline {
        position: relative;
        padding-left: 3rem;
      }

      .timeline::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(180deg, var(--fcc-orange) 0%, var(--fcc-blue) 100%);
      }

      .timeline-item {
        position: relative;
        padding-bottom: 3rem;
      }

      .timeline-item:last-child {
        padding-bottom: 0;
      }

      .timeline-marker {
        position: absolute;
        left: -3rem;
        top: 0;
        width: 16px;
        height: 16px;
        background: var(--fcc-orange);
        border: 3px solid var(--fcc-dark-blue);
        transform: translateX(-50%) rotate(45deg);
      }

      .timeline-item.current .timeline-marker {
        width: 24px;
        height: 24px;
        animation: pulse 2s ease-in-out infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          box-shadow: 0 0 0 0 rgba(254, 80, 0, 0.5);
        }
        50% {
          box-shadow: 0 0 0 15px rgba(254, 80, 0, 0);
        }
      }

      .timeline-date {
        font-family: var(--font-display);
        font-size: 1.25rem;
        color: var(--fcc-orange);
        margin-bottom: 0.5rem;
      }

      .timeline-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--fcc-white);
        margin-bottom: 0.5rem;
      }

      .timeline-subtitle {
        font-size: 1rem;
        color: var(--fcc-light-gray);
        margin-bottom: 1rem;
      }

      .timeline-content {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.7;
      }

      .timeline-stats {
        display: flex;
        gap: 2rem;
        margin-top: 1rem;
        flex-wrap: wrap;
      }

      .timeline-stat {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
      }

      .timeline-stat-value {
        font-family: var(--font-display);
        font-size: 1.5rem;
        color: var(--fcc-orange);
      }

      .timeline-stat-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--fcc-light-gray);
      }

      /* Quotes Section */
      .quotes-section {
        background: linear-gradient(
          135deg,
          var(--fcc-blue) 0%,
          var(--fcc-dark-blue) 100%
        );
        position: relative;
        overflow: hidden;
      }

      .quotes-section::before {
        content: "\201C";
        position: absolute;
        top: -100px;
        left: -50px;
        font-family: var(--font-display);
        font-size: 40rem;
        color: var(--fcc-orange);
        opacity: 0.03;
        line-height: 1;
      }

      .quotes-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 3rem;
      }

      .quote-card {
        background: rgba(4, 30, 66, 0.7);
        border-left: 4px solid var(--fcc-orange);
        padding: 2.5rem;
        position: relative;
      }

      .quote-text {
        font-size: 1.25rem;
        font-style: italic;
        color: var(--fcc-white);
        line-height: 1.7;
        margin-bottom: 1.5rem;
      }

      .quote-author {
        font-weight: 700;
        color: var(--fcc-orange);
      }

      .quote-role {
        font-size: 0.875rem;
        color: var(--fcc-light-gray);
      }

      /* CTA Section */
      .cta-section {
        background: var(--fcc-orange);
        text-align: center;
        position: relative;
        overflow: hidden;
      }

      .cta-section::before {
        content: "";
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
          45deg,
          transparent,
          transparent 40px,
          rgba(0, 48, 135, 0.1) 40px,
          rgba(0, 48, 135, 0.1) 42px
        );
      }

      .cta-content {
        position: relative;
        z-index: 1;
      }

      .cta-title {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 6vw, 4rem);
        color: var(--fcc-white);
        margin-bottom: 1.5rem;
      }

      .cta-text {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .cta-button {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background: var(--fcc-dark-blue);
        color: var(--fcc-white);
        padding: 1rem 2.5rem;
        font-size: 1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        text-decoration: none;
        transition: all 0.3s ease;
        clip-path: polygon(10px 0%, 100% 0%, calc(100% - 10px) 100%, 0% 100%);
      }

      .cta-button:hover {
        background: var(--fcc-blue);
        transform: translateX(5px);
      }

      .cta-button svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
      }

      .cta-button:hover svg {
        transform: translateX(5px);
      }

      /* Footer */
      .footer {
        background: var(--fcc-dark-blue);
        padding: 3rem 2rem;
        text-align: center;
        border-top: 1px solid rgba(254, 80, 0, 0.2);
      }

      .footer-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
      }

      .footer-logo svg {
        width: 40px;
        height: 40px;
      }

      .footer-logo-text {
        font-family: var(--font-display);
        font-size: 1.25rem;
        color: var(--fcc-white);
        letter-spacing: 0.05em;
      }

      .footer-text {
        color: var(--fcc-light-gray);
        font-size: 0.875rem;
      }

      .footer-text a {
        color: var(--fcc-orange);
        text-decoration: none;
      }

      .footer-text a:hover {
        text-decoration: underline;
      }

      /* Fade-in animation */
      .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition:
          opacity 0.8s ease,
          transform 0.8s ease;
      }

      .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
      }

      /* Responsive */
      @media (max-width: 900px) {
        .stats-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .style-grid {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 768px) {
        .nav {
          padding: 1rem;
        }

        .nav-links {
          display: none;
        }

        .hero-stats {
          gap: 2rem;
        }

        section {
          padding: 4rem 1.5rem;
        }

        .bio-grid {
          grid-template-columns: 1fr;
          gap: 2rem;
        }

        .bio-card {
          padding: 2rem;
        }

        .quotes-grid {
          grid-template-columns: 1fr;
          gap: 2rem;
        }
      }

      @media (max-width: 500px) {
        .stats-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </body>
</html>
