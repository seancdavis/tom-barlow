---
import { ArrowRight } from "@lucide/astro";
---

<section class="cta-section relative py-24 px-8 bg-fcc-orange text-center overflow-hidden">
  <!-- Diagonal stripe overlay -->
  <div class="cta-stripes absolute inset-0 pointer-events-none"></div>

  <div class="relative z-10 fade-in">
    <h2 class="font-display text-[clamp(2.5rem,6vw,4rem)] text-fcc-white mb-6">
      Welcome to the Orange &amp; Blue
    </h2>
    <p class="text-xl text-white/90 mb-8 max-w-[600px] mx-auto">
      Join thousands of passionate supporters at TQL Stadium to watch Tom Barlow and FC
      Cincinnati compete for MLS glory in 2026.
    </p>
    <a
      href="https://www.fccincinnati.com/tickets"
      class="group clip-badge inline-flex items-center gap-3 bg-fcc-dark-blue text-fcc-white px-10 py-4 text-base font-bold uppercase tracking-[0.15em] no-underline transition-all duration-300 hover:bg-fcc-blue hover:translate-x-1"
      target="_blank"
      rel="noopener noreferrer"
    >
      Get Tickets
      <ArrowRight class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" strokeWidth={2} />
    </a>
  </div>
</section>

<style>
  .cta-stripes {
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 40px,
      rgba(0, 48, 135, 0.1) 40px,
      rgba(0, 48, 135, 0.1) 42px
    );
  }
</style>
